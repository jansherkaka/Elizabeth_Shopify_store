<div class="h-full flex items-center justify-center py-12 px-6 md:px-4 lg:px-8" x-data="{ loginForm: true , pwRecoverForm: false}">
  <div class="max-w-md w-full space-y-8" x-show="loginForm">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Sign in your account
      </h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class=" relative border-red-400 bg-red-100 text-red-700 px-4 py-3">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email_address" class=" sr-only">Email</label>
          <input
            type="email"
            name="customer[email]"
            class="relative block w-full px-3 py-2 border"
            autocomplete="email"
            placeholder="Email address">
        </div>
        {% if form.password_needed %}
          <div class="my-2">
            <label for="email_address" class=" sr-only">Password</label>
            <input
              type="password"
              name="customer[password]"
              class="relative w-full block px-3 py-2 border"
              autocomplete="current-password"
              placeholder="Password">
          </div>
        {% endif %}
        <div class="my-2 text-sm">
          <a
            x-on:click="loginForm = false ; pwRecoverForm = true"
            href="#"
            class=" underline text-gray-500 hover:text-gray-900">Forget your password</a>
        </div>
        <div>
          <button class=" relative w-full py-2 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900" type="submit">Sign in</button>
        </div>
      {% endform %}
    </div>
  </div>


  <div class="max-w-md w-full space-y-8" x-show="pwRecoverForm">
    <div>
      <h1 class="text-center text-3xl font-bold mt-6">Recover Password
      </h1>
    </div>
    <div class="mt-8">
      {% form 'customer_login' %}
        {% if form.errors %}
          <div class=" relative border-red-400 bg-red-100 text-red-700 px-4 py-3">
            <strong class="font-bold">Error!</strong>
            <p class="block sm:inline">{{ form.errors | default_errors }}</p>
          </div>
        {% endif %}
        <div class="my-2">
          <label for="email" class=" sr-only">Email</label>
          <input
            type="email"
            name="email"
            id="email"
            class="relative block w-full px-3 py-2 border"
            autocomplete="email"
            placeholder="Email address">
        </div>
        <div>
          <button class=" relative w-full py-2 text-sm font-medium text-white bg-gray-600 hover:bg-gray-900" type="submit">Recover Password</button>
        </div>
        <div class="mt-6 text-sm">
          <a
            x-on:click="loginForm = true ; pwRecoverForm = false"
            class=" text-gray-500 hover:text-gray-900 underline"
            href="#">Back to login</a>
        </div>
      {% endform %}
    </div>
  </div>
</div>