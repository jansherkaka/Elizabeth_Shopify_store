{% if pagination.pages > 0 %}
  <nav role="navigation" class="flex justify-center my-8">
    {% if pagination.previous %}
      <a href="{{ pagination.previous.url}}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white rounded-sm font-medium px-8 py-3 mx-1">{{ pagination.previous.title }}</a>
    {% endif %}
    {% for part in pagination.parts %}
      {% if part.is_link %}
        <a href="{{ part.url }}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white rounded-sm font-medium px-8 py-3 mx-1">{{ part.title }}</a>
      {% else %}
        <span class="border border-gray-600 text-white bg-gray-600 rounded-sm font-medium px-8 py-3 mx-1">{{ part.title }}</span>
      {% endif %}
    {% endfor %}
    {% if pagination.next %}
      <a href="{{ pagination.next.url}}" class="border border-gray-600 text-gray-600 hover:bg-gray-600 hover:text-white rounded-sm font-medium px-8 py-3 mx-1">{{ pagination.next.title }}</a>
    {% endif %}
  </nav>
{% endif %}