<div class=" w-full py-6 px-3">
  <div class="bg-white shadow-xl rounded-lg overflow-hidden ">
    <a href="{{ product_product.url }}">
      {% if product_product.featured_image %}
        <img
          src="{{ product_product.featured_image |  img_url: 'medium' }}"
          alt="{{ product_product.featured_image.alt }}"
          class="w-full h-80 overflow-hidden object-cover object-center">
      {% else %}
        {{ 'product-1' | placeholder_svg_tag: 'w-full h-80 overflow-hidden object-cover object-center' }}
      {% endif %}
    </a>
    <div class="flex flex-col p-4">
      <a href="{{ product_product.url }}" class="font-medium">{{ product_product.title }}</a>
      <p class="text-gray-500">{{ product_product.price | money }}</p>
    </div>

  </div>
</div>